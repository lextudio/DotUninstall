<Application x:Class="DotNetUninstall.App"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- Load WinUI resources -->
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
        <!-- Load Uno.UI.Toolkit resources -->
        <ToolkitResources xmlns="using:Uno.Toolkit.UI" />
        <!-- Centralized color resources -->
        <ResourceDictionary Source="/Presentation/Resources/Colors.xaml" />
      </ResourceDictionary.MergedDictionaries>

    <!-- No local color resources here. All Badge/Security/Latest/Lifecycle/Banner brushes live in Colors.xaml. -->

    </ResourceDictionary>
  </Application.Resources>

</Application>
