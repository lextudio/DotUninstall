<UserControl
  x:Class="DotNetUninstall.Presentation.Controls.TwoPartBadge"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  mc:Ignorable="d"
  d:DesignHeight="24"
  d:DesignWidth="120">
  <!-- Generic two-part badge: [Label] [Value] with optional custom value content -->
  <Grid x:Name="Root" VerticalAlignment="Center">
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Border
      x:Name="LabelBorder"
      Grid.Column="0"
      Padding="5,2"
      MinHeight="20"
      Background="{x:Bind LabelBackground, Mode=OneWay}"
      CornerRadius="{x:Bind LabelCornerRadius, Mode=OneWay}">
      <TextBlock
        FontSize="{x:Bind BadgeFontSize, Mode=OneWay}"
        FontWeight="SemiBold"
        VerticalAlignment="Center"
        Foreground="{x:Bind LabelForeground, Mode=OneWay}"
        Text="{x:Bind Label, Mode=OneWay}" />
    </Border>
    <Border
      x:Name="ValueBorder"
      Grid.Column="1"
      Padding="5,2"
      MinHeight="20"
      Background="{x:Bind ValueBackground, Mode=OneWay}"
      CornerRadius="{x:Bind ValueCornerRadius, Mode=OneWay}">
      <StackPanel Orientation="Horizontal" Spacing="2" VerticalAlignment="Center">
        <TextBlock
          x:Name="ValueTextBlock"
          FontSize="{x:Bind BadgeFontSize, Mode=OneWay}"
          Foreground="{x:Bind ValueForeground, Mode=OneWay}"
          VerticalAlignment="Center"
          Text="{x:Bind Value, Mode=OneWay}"
          Visibility="{x:Bind Value, Converter={StaticResource StringNotNullOrEmptyToVisibilityConverter}, Mode=OneWay}" />
        <Button
          x:Name="InfoButton"
          Width="18"
          Height="18"
          Padding="0"
          Margin="2,0,0,0"
          CornerRadius="9"
          Background="White"
          BorderThickness="0"
          Tag="{x:Bind InfoTag, Mode=OneWay}"
          ToolTipService.ToolTip="{x:Bind InfoToolTip, Mode=OneWay}"
          Visibility="{x:Bind InternalInfoVisibility, Mode=OneWay}"
          Command="{x:Bind BadgeCommand, Mode=OneWay}"
          CommandParameter="{x:Bind BadgeCommandParameter, Mode=OneWay}">
          <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="{x:Bind InfoGlyphFontSize, Mode=OneWay}"
            FontWeight="Bold"
            Foreground="{x:Bind InfoGlyphForeground, Mode=OneWay}"
            Text="{x:Bind InfoGlyph, Mode=OneWay}" />
        </Button>
      </StackPanel>
    </Border>
  </Grid>
</UserControl>